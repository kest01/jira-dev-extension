{
  "manifest_version": 2,

  "name": "Jira Dev Helper",
  "description": "Помогает решать ежедневные задачи в проекте ММЦ",
  "version": "1.0",

  "page_action": {
    "default_icon": "jira.png",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["background.js"]
//    "persistent": false
  },
  "permissions": [
    "activeTab",
    "declarativeContent",
    "storage",
    "https://sentinel2.luxoft.com/",
    "https://ajax.googleapis.com/"
  ]
}